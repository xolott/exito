{
  "name": "exito",
  "author": "Jose Truyol",
  "private": true,
  "version": "0.0.0",
  "main": "electron/electron.js",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "test": "jest",
    "test:fast": "jest --config jest.config.fast.js",
    "electron": "wait-on tcp:3000 && cross-env IS_DEV=true electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dev": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron\"",
    "electron:debug": "concurrently -k \"cross-env BROWSER=none yarn dev\" \"yarn electron --remote-debugging-port=9229\"",
    "electron:builder": "electron-builder",
    "build:vite": "vue-tsc --noEmit && vite build",
    "build:electron": "vue-tsc --noEmit && cross-env ELECTRON=true vite build",
    "build:app": "yarn build:electron && yarn electron:builder"
  },
  "dependencies": {
    "@octokit/graphql": "^5.0.1",
    "lodash": "^4.17.21",
    "pinia": "^2.0.22",
    "vue": "^3.2.37"
  },
  "devDependencies": {
    "@iconify-json/heroicons": "^1.1.5",
    "@iconify-json/mdi": "^1.1.33",
    "@swc/core": "^1.3.6",
    "@swc/jest": "^0.2.23",
    "@types/jest": "^29.1.2",
    "@types/lodash": "^4.14.186",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/vue3-jest": "28",
    "autoprefixer": "^10.4.12",
    "chai": "^4.3.6",
    "concurrently": "^7.4.0",
    "cross-env": "^7.0.3",
    "electron": "^21.1.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.6.0",
    "fetch-mock": "^9.11.0",
    "jest": "^29.1.2",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "tailwindcss": "^3.1.8",
    "ts-jest": "^29.0.3",
    "typescript": "^4.6.4",
    "unplugin-icons": "^0.14.11",
    "vite": "^3.1.0",
    "vite-plugin-pages": "^0.26.0",
    "vite-svg-loader": "^3.6.0",
    "vue-router": "^4.1.5",
    "vue-tsc": "^0.40.4",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "dev.truyol.exito",
    "productName": "Exito",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
